<main>
  <div class="container d-flex justify-content-left align-items-left">
    <div class="list-group list-group-flush">
      <div class="list-group-item">
        <h1>{{title}}</h1>
      </div>
    {{#each comments}}
        <a href="#" class="list-group-item list-group-item-action">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{body}}</h5>
          </div>
          <p class="mb-1">Posted: {{created_at}}</p>
        </a>
    {{/each}}
    <div class="list-group-item">
        <form method="POST" action="/board" class="w-100" style="max-width: 400px;">
          <h3 class="mb-3 text-left">New Post</h3>
          <div class="mb-3">
            <input type="text" class="form-control" name="post_title" placeholder="Enter Post Title" required />
          </div>
          <div class="mb-3">
            <input type="hidden" class="form-control" name="board_id" required />
          </div>
          <button type="submit" class="btn btn-primary w-100">Create Board</button>
        </form>
      </div>
    </div>
  </div>
</main>